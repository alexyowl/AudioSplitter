{
  "manifest_version": 3,
  "name": "Sound Router",
  "version": "1.1",
  "description": "Route video sound to left/right/mono audio channels in Firefox.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sound-router@example.com"
    }
  }
}
