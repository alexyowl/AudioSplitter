{
  "manifest_version": 3,
  "name": "Audio Splitter",
  "version": "1.0",
  "description": "Route tab sound to left or right audio channel.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
